{
  "overwrite": true,
  "schema": "./schema.graphql",
  "generates": {
    "src/generated/schema.ts": {
      "plugins": [
        "typescript",
        "typescript-resolvers"
      ],
      "config": {
        "contextType": "../resolvers.js#ResolverContext",
        "mappers": {
          "Company": "../db/types.js#CompanyEntity",
          "Job": "../db/types.js#JobEntity"
        },
        "skipTypename": true
      }
    }
  }
}
